@model Advertisement

<h4>Új hirdetés hozzáadása</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Név</label>
                <input asp-for="Name" name="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label">Pozíció</label>
                <input asp-for="Position" name="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Leírás</label>
                <input asp-for="Description" name="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pay" class="control-label">Fizetés</label>
                <input asp-for="Pay" name="Pay" class="form-control" />
                <span asp-validation-for="Pay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Hozzáadás" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
